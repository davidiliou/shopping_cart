{# templates/home.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <title>Welcome to Symfony!</title>
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    </head>
    <body>
		<div class="container">
			<div class="col-md-12">
		    	{% include 'top.html.twig' %}
		        <div class="container">
		        	<div class="row">
	                	{% if products %}
		                	{% for product in products %}
				                <div class="col-sm-6 col-md-4 col-xl-3 product menu-category" data-type="product">
		                            <div class="menu-category-name list-group-item active">{{ product.name | capitalize }}</div>
		                            <div class="product-image">
		                                <img class="product-image menu-item list-group-item" src="{{asset(product.ImageFilename,'products')}}">
		                            </div> 
		                            <div class="product_description">
		                            	{{ product.getShortDescription }}<span class="badge">{{ product.price }}â‚¬</span>
		                            </div>
		                            <div class="text-center">
		                            	<a href="{{ path('product',{'id':product.id}) }}" type="button" class="btn btn-secondary">{% trans %}Details{% endtrans %}</a>
		                            </div>
		                        </div>
				            {% endfor %}
				        {% else %}
				        	<div class="col-sm-12">
				        		{% trans %}No product{% endtrans %}
				        	</div>
				        {% endif %}
			        </div> 
	            </div>
		        <!--/container-->
		    </div>
		</div>
        <script src="{{ asset('build/app.js') }}"></script>
    </body>
</html>